#!/bin/sh

mkdir -p /tmp/starship
cd /tmp/starship || exit 1
wget "https://github.com/starship/starship/releases/download/v0.49.0/starship-i686-unknown-linux-musl.tar.gz" || exit 1
tar xf "starship-i686-unknown-linux-musl.tar.gz" || exit 1
if install -Dm 755 "./starship" "/usr/bin/starship"; then
    echo "Starship installed"
else
    exit 1
fi
cd "/"
rm -rf /tmp/starship
